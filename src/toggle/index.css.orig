	width: calc(var(--size) * 2.3);
	border: calc(var(--size) / 15) solid #eee;
	border-radius: 2em;
	background: #333;
	user-select: none;
	-webkit-user-select: none;
	cursor: pointer;
	overflow: hidden;
	padding: 2px;
}

