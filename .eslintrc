{
	"extends": "eslint:recommended",
	"env": {
		"commonjs": true,
		"browser": true,
		"node": true,
		"es2021": true
	},
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [ "svelte3" ],
	"overrides": [
		{ "files": "*.svelte", "processor": "svelte3/svelte3" }
	],
	"rules": {
		"indent": [ 2, "tab" ],
		"quotes": [ 2, "single", "avoid-escape" ],
		"semi": [ 2, "always" ],
		"no-undef": 2,
		"no-mixed-spaces-and-tabs": 2,
		"no-unused-vars": 2,
		"no-trailing-spaces": 2,
		"no-shadow": 2,
		"eol-last": 1,
		"curly": 0,
		"no-console": 0,
		"comma-dangle": 0,
		"no-cond-assign": 0
	}
}
